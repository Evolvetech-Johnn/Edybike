{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "controllers/**/*", "models/**/*", "routes/**/*", "middleware/**/*", "config/**/*", "utils/**/*", "server.ts", "seeder.ts"],
  "exclude": ["node_modules"]
}
